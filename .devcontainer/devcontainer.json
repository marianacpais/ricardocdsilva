{
  "name": "CV Development Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "postCreateCommand": "pip install rendercv mkdocs mkdocs-material",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "eamodio.gitlens",
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "vscode"
}
